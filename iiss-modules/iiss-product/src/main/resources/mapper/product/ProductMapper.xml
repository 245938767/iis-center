<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.iiss.products.product.mapper.ProductMapper">

    <resultMap type="cn.iiss.products.product.Product" id="GoodsResult">
        <result property="id"    column="id"    />
        <result property="productCode"    column="product_code"    />
        <result property="productName"    column="product_name"    />
        <result property="categoryId"    column="category_id"    />
        <result property="brand"    column="brand"    />
        <result property="note"    column="note"    />
        <result property="productSpecification"    column="product_specification"    />
        <result property="model"    column="model"    />
        <result property="unit"    column="unit"    />
        <result property="productImg"    column="product_img"    />
    </resultMap>

    <sql id="selectGoodsVo">
        select id, product_code, product_name, category_id, brand, note, product_specification, model, unit,  product_img from product
    </sql>

    <select id="selectGoodsList" parameterType="cn.iiss.product.face.domain.ProductQueryRequest" resultMap="GoodsResult">
        select * from product
        <where>
            <if test="productCode != null  and productCode != ''"> and product_code like concat('%', #{productCode}, '%')</if>
            <if test="productName != null  and productName != ''"> and product_name like concat('%', #{productName}, '%')</if>
            <if test="categoryId != null "> and category_id = #{categoryId}</if>
            <if test="brand != null  and brand != ''"> and brand = #{brand}</if>
            <if test="note != null  and note != ''"> and note like concat('%', #{note}, '%')</if>
            <if test="productSpecification != null  and productSpecification != ''"> and product_specification = #{productSpecification}</if>
            <if test="model != null  and model != ''"> and model = #{model}</if>
            <if test="unit != null  and unit != ''"> and unit = #{unit}</if>
        </where>
    </select>

    <select id="selectGoodsById" parameterType="Long" resultMap="GoodsResult">
        <include refid="selectGoodsVo"/>
        where id = #{id}
    </select>

    <insert id="insertGoods" parameterType="cn.iiss.products.product.Product">
        insert into product
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="productCode != null">product_code,</if>
            <if test="productName != null">product_name,</if>
            <if test="categoryId != null">category_id,</if>
            <if test="brand != null">brand,</if>
            <if test="note != null">note,</if>
            <if test="productSpecification != null">product_specification,</if>
            <if test="model != null">model,</if>
            <if test="unit != null">unit,</if>
            <if test="productImg != null">product_img,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="productCode != null">#{productCode},</if>
            <if test="productName != null">#{productName},</if>
            <if test="categoryId != null">#{categoryId},</if>
            <if test="brand != null">#{brand},</if>
            <if test="note != null">#{note},</if>
            <if test="productSpecification != null">#{productSpecification},</if>
            <if test="model != null">#{model},</if>
            <if test="unit != null">#{unit},</if>
            <if test="productImg != null">#{productImg},</if>
         </trim>
    </insert>

    <update id="updateGoods" parameterType="cn.iiss.products.product.Product">
        update product
        <trim prefix="SET" suffixOverrides=",">
            <if test="productCode != null">product_code = #{productCode},</if>
            <if test="productName != null">product_name = #{productName},</if>
            <if test="categoryId != null">category_id = #{categoryId},</if>
            <if test="brand != null">brand = #{brand},</if>
            <if test="note != null">note = #{note},</if>
            <if test="productSpecification != null">product_specification = #{productSpecification},</if>
            <if test="model != null">model = #{model},</if>
            <if test="unit != null">unit = #{unit},</if>
            <if test="productImg != null">product_img = #{productImg},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteGoodsById" parameterType="Long">
        delete from product where id = #{id}
    </delete>

    <delete id="deleteGoodsByIds" parameterType="String">
        delete from product where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>